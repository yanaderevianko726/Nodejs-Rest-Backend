{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0", 
    "title": "CheckIn API",
    "description": "Defence Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/users/getAll": {
      "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get all users in system",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/Users"
              }
            }
          }
        }
    },
    "/api/users/confirmKey/{pmKey}/{surname}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Confirm user with pmkey and surname in system",
        "parameters": [          
          {
            "name": "pmKey",
            "in": "path",
            "required": true,
            "description": "PmKey for user",
            "type": "string"
          },
          {
            "name": "surname",
            "in": "path",
            "required": true,
            "description": "Surname for user",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/api/users/updateUser/{userId}": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Confirm user in system",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "User Id",
            "type": "integer"
          },
          {
            "name": "Confirm User",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "properties": {
                "surname": {
                  "type": "string",
                  "required": true
                },
                "lastname": {
                  "type": "string",
                  "required": true              
                },
                "phoneNumber": {
                  "type": "string",
                  "required": true              
                },
                "email": {
                  "type": "string",
                  "required": true              
                },
                "rankNum": {
                  "type": "string",
                  "required": true              
                },
                "pmKey": {
                  "type": "string",
                  "required": true,
                  "uniqueItems": true            
                },
                "title": {
                  "type": "string",
                  "required": true             
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      } 
    },
    "/api/users/addUser": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Add new user in system",
        "parameters": [
          {
            "name": "Add User",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "properties": {
                "surname": {
                  "type": "string",
                  "required": true
                },
                "lastname": {
                  "type": "string"              
                },
                "phoneNumber": {
                  "type": "string"              
                },
                "email": {
                  "type": "string"              
                },
                "rankNum": {
                  "type": "string"              
                },
                "pmKey": {
                  "type": "string",
                  "required": true  ,
                  "uniqueItems": true            
                },
                "title": {
                  "type": "string"             
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      } 
    },
    "/api/users/deleteUser/{userId}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Remove user with userId in system",
        "parameters": [          
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "PmKey for user",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "message": "Successfully removed user."
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "surname",
        "pmKey"
      ],
      "properties": {
        "userId": {
          "type": "integer",
          "uniqueItems": true
        },
        "surname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"              
        },
        "phoneNumber": {
          "type": "string"              
        },
        "email": {
          "type": "string"              
        },
        "rankNum": {
          "type": "string"              
        },
        "pmKey": {
          "type": "string"              
        },
        "title": {
          "type": "string"              
        },
        "token": {
          "type": "string"              
        }
      }
    },
    "updateUser": {
      "required": [
        "userId"
      ],
      "properties": {
        "surname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"              
        },
        "phone_number": {
          "type": "string"              
        } ,
        "email": {
          "type": "string"              
        },
        "rank_num": {
          "type": "string"              
        },
        "pmkey": {
          "type": "string"              
        },
        "title": {
          "type": "string"              
        }    ,
        "token": {
          "type": "string"              
        }  
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }   
  }
}